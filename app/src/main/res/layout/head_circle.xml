<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp">
    <ImageView
        android:id="@+id/big_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/bg_circle_head"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/user_photo_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/big_image"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="30dp"
        android:src="@mipmap/circle_user_photo"
        android:scaleType="centerCrop"
        android:padding="1dp"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="呵呵哒!"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/user_photo_iv"
        android:layout_alignBottom="@+id/big_image"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>